<Window Closing="Window_Closing" x:Class="AutoSonographyWPF.UltrasoundScanMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoSonographyWPF"
        mc:Ignorable="d"
        Title="Automatic Sonography - Ultrasound Scan" Height="320" Width="512">
    <Grid>
        <Button Click="btnCancel_Click" x:Name="btnCancel" Content="Stop" HorizontalAlignment="Right" Margin="0,35,10,0" VerticalAlignment="Top" Width="75" Background="#FFFF8080"/>
        <Button Click="btnPause_Click" x:Name="btnPause" Content="Pause" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="75" Background="#FFFFDC80"/>
        <Label x:Name="labelCompletion" Content="Completion" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxCompletionValue" HorizontalAlignment="Left" Height="23" Margin="87,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="65" IsEnabled="False"/>

    </Grid>
</Window>
